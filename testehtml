<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // ------------------------------------------------------------------
    // üí° CORRE√á√ÉO CRUCIAL: Limpa campos de detalhe ao mudar qualquer filtro
    // ------------------------------------------------------------------
    function clearDetailFields() {
        // Limpa o C√≥digo de Cliente (input para Operadora)
        $('#codigo_cliente').val(''); 
        // Limpa a policy_name_cliente (agora um input hidden)
        $('#policy_name_cliente').val(''); 
        
        // Garante que as propriedades de requerimento (se houver) estejam corretas
        $('#policy_name_cliente').prop('required', false);
        $('#codigo_cliente').prop('required', false);
    }

    $('#tipo_politica').change(function() {
        clearDetailFields(); // <--- CHAMA A LIMPEZA AO MUDAR O TIPO DE POL√çTICA
        var selectedType = $(this).val();
        var campoCodigo = $('#campo-codigo');
        var campoClientePlaceholder = $('#campo-cliente-placeholder');

        if (selectedType === 'OPERADORA') {
            campoCodigo.removeClass('hidden-field');
            campoClientePlaceholder.addClass('hidden-field');
            // Apenas o c√≥digo pode ser obrigat√≥rio (se o usu√°rio n√£o o deixar vazio para listar)
            $('#codigo_cliente').prop('required', false);
        } else if (selectedType === 'CLIENTE' || selectedType === 'OPENCDN') {
            campoCodigo.addClass('hidden-field');
            campoClientePlaceholder.removeClass('hidden-field');
            // Para CLIENTE/OPENCDN, o valor √© setado apenas pelo clique na lista/fixo, ent√£o n√£o √© "required" no formul√°rio principal
            $('#policy_name_cliente').prop('required', false);
        }
        
        // NOVO: Atualiza o placeholder do campo cliente/cdn
        if (selectedType === 'OPENCDN') {
            // Garante que o valor da policy fixa seja passado no submit
            $('#policy_name_cliente').val('BEMOL_OPENCDN'); 
            
            // Atualiza o display do placeholder
            $('#campo-cliente-placeholder input').val('BEMOL_OPENCDN (Policy Fixa)').prop('disabled', true).attr('placeholder', '');
        } else if (selectedType === 'CLIENTE') {
             $('#campo-cliente-placeholder input').val('').prop('disabled', true).attr('placeholder', 'Clique em Visualizar para listar as policies');
        } else {
             $('#campo-cliente-placeholder input').val('').prop('disabled', true).attr('placeholder', '');
        }
    });

    // ------------------------------------------------------------------
    // üí° NOVOS LISTENERS: Garante a limpeza ao mudar Sentido ou Tipo de IP
    // ------------------------------------------------------------------
    $('#sentido, #tipo_ip').change(function() {
        clearDetailFields();
        // Dispara o change para corrigir o placeholder da policy
        $('#tipo_politica').trigger('change');
    });

    $(document).ready(function() {
        // Dispara o change para corrigir os campos hidden e placeholders no carregamento
        $('#tipo_politica').trigger('change');

        // Listener para a lista de C√≥digos (Operadora)
        $('#tabela-codigos').on('click', 'tr.clickable-row', function() {
            var url = $(this).data('href');
            if (url) {
                window.location.href = url;
            }
        });

        // Listener para a lista de Policies (Cliente)
        $('#tabela-policies').on('click', 'tr.clickable-row', function() {
            var url = $(this).data('href');
            if (url) {
                window.location.href = url;
            }
        });
    });
</script>

